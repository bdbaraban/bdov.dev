  "repository": {
    "type": "git",
    "url": "git+https://github.com/bdbaraban/bdov.dev"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "bulma": "^0.7.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "install": "^0.12.2",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2"
  },
  "scripts": {
    "build": "npm run css-deploy && npm run js-build",
    "css-build": "node-sass src/_sass/main.scss src/css/main.css",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-postcss": "postcss --use autoprefixer --output src/css/main.css src/css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy-staging": "npm run build && now",
    "deploy-production": "npm run build && now --target production",
    "lint": "eslint --global $ src/_javascript/*",
    "js-build": "babel src/_javascript --out-dir src/lib",
    "js-watch": "npm run js-build -- --watch",
    "start": "npm-run-all --parallel css-watch js-watch"
  }
}
